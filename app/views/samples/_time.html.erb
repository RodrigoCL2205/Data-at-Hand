<div class=" margin: auto">
  <div class="row justify-content-center">
    <div class="col-12 col-sm-10">

        <h2>Filtro por período</h2>
        <%= simple_form_for :twelve, method: "get" do |f| %>

          <div class="row justify-content-center">
            <div class="col-3">
              <%= f.input :start_time, as: :string, label: "Data de Início", required: true, input_html: {class: "datepicker"} %>
            </div>
            <div class="col-3">
              <%= f.input :end_time, as: :string, label: "Data Final", required: true, input_html: {class: "datepicker"} %>
            </div>

            <div class="form-actions col-3 align-self-center pt-2 pb-0 px-0">
              <%= f.button :submit, "Gerar Relatório", class: "br-button secondary mt-3 mt-sm-0 ml-sm-3" %>
            </div>
          </div>
          <div class="d-flex justify-content-center p-2">
            <a href="javascript:history.back()" class="br-button secondary mt-3 mt-sm-0 ml-sm-3">Voltar</a>
          </div>
        <% end %>

    </div>
  </div>
</div>
